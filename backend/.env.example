# Server Configuration
HOST=0.0.0.0
PORT=1337

# Public URL (for production, set to your Strapi Cloud URL)
# PUBLIC_URL=https://your-project.strapiapp.com

# Admin Configuration
# ADMIN_URL=/admin
# SERVE_ADMIN=true

# Security Keys (Generate secure random strings for production)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
APP_KEYS="toBeModified1,toBeModified2"
API_TOKEN_SALT=tobemodified
ADMIN_JWT_SECRET=tobemodified
TRANSFER_TOKEN_SALT=tobemodified
JWT_SECRET=tobemodified
ENCRYPTION_KEY=tobemodified

# Database Configuration
# For local development (SQLite - default)
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=.tmp/data.db

# For Strapi Cloud or production (PostgreSQL)
# DATABASE_CLIENT=postgres
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=strapi
# DATABASE_USERNAME=strapi
# DATABASE_PASSWORD=strapi
# DATABASE_SSL=false
# DATABASE_URL=postgres://username:password@host:port/database
