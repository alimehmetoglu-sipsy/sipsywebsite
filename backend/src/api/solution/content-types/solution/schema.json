{
  "kind": "collectionType",
  "collectionName": "solutions",
  "info": {
    "singularName": "solution",
    "pluralName": "solutions",
    "displayName": "Solution",
    "description": "Case study solutions with detailed project information"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "subtitle": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "shortDescription": {
      "type": "text",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "service": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::service.service",
      "inversedBy": "solutions"
    },
    "icon": {
      "type": "customField",
      "customField": "plugin::strapi-plugin-iconhub.iconhub",
      "options": {
        "storeIconData": true,
        "storeIconName": true
      }
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "tools": {
      "type": "component",
      "repeatable": true,
      "component": "solution.tool"
    },
    "project": {
      "type": "component",
      "repeatable": false,
      "component": "solution.project"
    },
    "visuals": {
      "type": "component",
      "repeatable": true,
      "component": "solution.visual"
    }
  }
}
