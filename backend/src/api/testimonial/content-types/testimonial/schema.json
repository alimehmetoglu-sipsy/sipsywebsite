{
  "kind": "collectionType",
  "collectionName": "testimonials",
  "info": {
    "singularName": "testimonial",
    "pluralName": "testimonials",
    "displayName": "Testimonial"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "quote": {
      "type": "text",
      "required": true
    },
    "authorName": {
      "type": "string",
      "required": true
    },
    "authorTitle": {
      "type": "string",
      "required": true
    },
    "authorInitials": {
      "type": "string",
      "maxLength": 3
    },
    "rating": {
      "type": "integer",
      "default": 5,
      "min": 1,
      "max": 5
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}
